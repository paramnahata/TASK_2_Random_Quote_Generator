<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient">

    <!-- Decorative Image Top -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_quotes"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Quote Icon" />

    <!-- Card with Quote -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerImage"
        android:layout_margin="24dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading quote..."
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Author"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:gravity="end"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/cardQuote"
        android:layout_margin="24dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnNewQuote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Quote"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:layout_marginStart="8dp"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</RelativeLayout>
